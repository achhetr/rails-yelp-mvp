<div class="container d-flex flex-column align-items-center mt-5 ">
  <div class="card text-center w-50">
    <div class="card-header">
      Restaurant
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= @restaurant.name %></h5>
      <p class="card-text text-muted"><%= @restaurant.address %></p>
      <p class="card-text"><%= @restaurant.phone_number %></p>
    </div>
    <div class="card-footer text-muted">
      <%= @restaurant.category.upcase %>
    </div>
  </div>
  <div class="mt-2">
    <%= link_to 'Home', restaurants_path, class: "btn btn-primary"%>
    <%= link_to 'Edit', edit_restaurant_path, class: "btn btn-warning" %>
    <%= link_to 'Delete', restaurant_path(@restaurant), method: :delete, class: "btn btn-danger" %>
  </div>
</div>
